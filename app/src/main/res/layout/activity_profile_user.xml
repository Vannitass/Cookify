<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Profile Picture -->
    <ImageView
        android:id="@+id/profilePicture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/profile_picture"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="Profile Picture"
        android:background="@drawable/account_avatar_profile_user" />

    <!-- Username -->
    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arseniy"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/profilePicture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Stats (Posts, Followers, Following) -->
    <LinearLayout
        android:id="@+id/statsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <!-- Posts -->
        <TextView
            android:id="@+id/postsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="452\nпосты"
            android:textAlignment="center"
            android:textSize="14sp" />

        <!-- Followers -->
        <TextView
            android:id="@+id/followersCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000\nподписчики"
            android:textAlignment="center"
            android:textSize="14sp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp" />

        <!-- Following -->
        <TextView
            android:id="@+id/followingCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200\nподписки"
            android:textAlignment="center"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Publish Button -->
    <Button
        android:id="@+id/publishButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Опубликовать"
        app:layout_constraintTop_toBottomOf="@id/statsLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Settings Icon -->

    <!-- Recipe Card Container -->

    <ImageView
        android:id="@+id/settingsIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="84dp"
        android:contentDescription="Settings Icon"
        android:src="@drawable/settings_svgrepo"
        app:layout_constraintBottom_toBottomOf="@id/publishButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/publishButton" />

    <LinearLayout
        android:id="@+id/recipeCardsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/publishButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:padding="8dp">

        <!-- Recipe Card 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/recipeImage1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/soupramen"
                android:contentDescription="Recipe Image" />

            <TextView
                android:id="@+id/recipeText1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="Суп «Рамен» — это одно из самых популярных блюд в Японии. Очень сытное блюдо..."
                android:textSize="12sp"
                android:maxLines="2"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Recipe Card 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/recipeImage2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/souptomyam"
                android:contentDescription="Recipe Image" />

            <TextView
                android:id="@+id/recipeText2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="Суп Том-Ям — Варить этот тайский суп меня научила знакомая кореянка..."
                android:textSize="12sp"
                android:maxLines="2"
                android:ellipsize="end" />
        </LinearLayout>
    </LinearLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/button1"
            android:layout_width="50dp"
            android:layout_height="53dp"
            android:layout_margin="24dp"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_home"
            android:text="home" />

        <ImageButton
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="chat"
            android:layout_margin="24dp"
            android:src="@drawable/ic_chat"
            android:background="?android:attr/selectableItemBackground"/>

        <ImageButton
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user"
            android:layout_margin="24dp"
            android:src="@drawable/ic_profile"
            android:background="?android:attr/selectableItemBackground"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
